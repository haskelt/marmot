import sys

message_categories = {
    'error': {
        'level': 1,
        'prefix': '! '
    },
    'info': {
        'level': 2,
        'prefix': ''
        },
    'debug': {
        'level': 3,
        'prefix': '%% '
        }
    }

logging_level = 2

#-------------------------------------------------------------------------------

def message(category, text):
    if message_categories[category]['level'] <= logging_level:
        print(message_categories[category]['prefix'] + text, file = sys.stderr)

#-------------------------------------------------------------------------------
