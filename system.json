{
    "config_root": "config/",
    "content_root": "content/",
    "design_root": "design/",
    "templates_dir": "templates/",
    "resources_dir": "resources/",
    "build_root": "build/",
    "build_profiles_file": "profiles.json",
    "lib_root": "salallib",
    "action_handlers_dir": "action_handlers",
    "file_processing_handlers_dir": "file_processing_handlers",
    "action_commands" : {
	"deploy" : [
	    "rsync -e \"/usr/bin/ssh\" -av --exclude=/.well-known/ --delete {{profile_build_dir}}/ {{deploy_destination}}"
	],
	"clean" : [
	    "rm -f *~",
	    "rm -f xml/*~ xml/*/*~ xml/*/*/*~ xml/*/*/*/*~",
	    "rm -f local/templates/*~ local/templates/blocks/*~",
	    "rm -f local/css/*~",
	    "rm -f local/js/*~",
	    "rm -f local/py/*~",
	    "rm -f local/modules/*/*~",
	    "rm -f config/*~"
	]
    }
}
